mini2.Text = "+"
mini2.TextSize = 40
mini2.Position = UDim2.new(0, 44, -1, 57)
mini2.Visible = false

-- Bildirim
game:GetService("StarterGui"):SetCore("SendNotification", {
	Title = "FLY GUI V3";
	Text = "Sade uçuş mekaniği + UP/DOWN";
	Icon = "rbxthumb://type=Asset&id=5107182114&w=150&h=150";
	Duration = 5;
})

-- Uçuş başlat
local function startFly()
	if flying then return end
	flying = true
	
	local root = char:FindFirstChild("HumanoidRootPart")
	if not root then return end
	
	-- BodyGyro: kameraya dön
	bg = Instance.new("BodyGyro", root)
	bg.P = 9e4
	bg.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
	bg.CFrame = root.CFrame
	
	-- BodyVelocity: hareket
	bv = Instance.new("BodyVelocity", root)
	bv.MaxForce = Vector3.new(9e9, 9e9, 9e9)
	bv.Velocity = Vector3.zero
	
	-- PlatformStand
	hum.PlatformStand = true
	
	-- RenderStepped döngüsü
	flightConnection = RunService.RenderStepped:Connect(function()
		if not flying then return end
		
		local cam = workspace.CurrentCamera
		local moveDir = hum.MoveDirection
		
		-- Yatay hareket (WASD) - aynen istediğin gibi
		local velocity = Vector3.zero
		if moveDir.Magnitude > 0 then
			velocity = (cam.CFrame.LookVector * moveDir.Z + cam.CFrame.RightVector * moveDir.X) * (speed * 50)
		end
		
		-- Dikey hareket (UP/DOWN butonları)
		if upPressed then
			velocity = velocity + Vector3.new(0, speed * 50, 0)
		end
		if downPressed then
			velocity = velocity + Vector3.new(0, -speed * 50, 0)
		end
		
		bv.Velocity = velocity
		bg.CFrame = cam.CFrame
	end)
end

-- Uçuş durdur
local function stopFly()
	flying = false
	if flightConnection then
		flightConnection:Disconnect()
		flightConnection = nil
	end
	if bg then
		bg:Destroy()
		bg = nil
	end
	if bv then
		bv:Destroy()
		bv = nil
	end
	hum.PlatformStand = false
end

-- Toggle fly
onof.MouseButton1Click:Connect(function()
	if not flying then
		onof.Text = "FLY: ON"
		startFly()
	else
		onof.Text = "fly"
		stopFly()
	end
end)

-- UP butonu (basılı tut)
up.MouseButton1Down:Connect(function()
	upPressed = true
end)
up.MouseButton1Up:Connect(function()
	upPressed = false
end)
up.MouseLeave:Connect(function()
	upPressed = false
end)

-- DOWN butonu (basılı tut)
down.MouseButton1Down:Connect(function()
	downPressed = true
end)
down.MouseButton1Up:Connect(function()
	downPressed = false
end)
down.MouseLeave:Connect(function()
	downPressed = false
end)

-- Hız arttırma
plus.MouseButton1Click:Connect(function()
	speed = speed + 1
	speedLabel.Text = tostring(speed)
end)

-- Hız azaltma (minimum 1)
mine.MouseButton1Click:Connect(function()
	if speed > 1 then
		speed = speed - 1
		speedLabel.Text = tostring(speed)
	else
		speedLabel.Text = "MIN"
		task.wait(0.5)
		speedLabel.Text = tostring(speed)
	end
end)

-- Kapatma
closebutton.MouseButton1Click:Connect(function()
	stopFly()
	main:Destroy()
end)

-- Minimize
mini.MouseButton1Click:Connect(function()
	up.Visible = false
	down.Visible = false
	onof.Visible = false
	plus.Visible = false
	speedLabel.Visible = false
	mine.Visible = false
	mini.Visible = false
	mini2.Visible = true
	Frame.BackgroundTransparency = 1
	closebutton.Position = UDim2.new(0, 0, -1, 57)
end)

mini2.MouseButton1Click:Connect(function()
	up.Visible = true
	down.Visible = true
	onof.Visible = true
	plus.Visible = true
	speedLabel.Visible = true
	mine.Visible = true
	mini.Visible = true
	mini2.Visible = false
	Frame.BackgroundTransparency = 0
	closebutton.Position = UDim2.new(0, 0, -1, 27)
end)

-- Karakter değiştiğinde uçuşu durdur
plr.CharacterAdded:Connect(function(newChar)
	char = newChar
	hum = char:WaitForChild("Humanoid")
	stopFly()
	onof.Text = "fly"
end)

-- Başlangıçta karakter varsa hazırla
if not char or not char.Parent then
	char = plr.CharacterAdded:Wait()
	hum = char:WaitForChild("Humanoid")
end
