local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "SERAZS FLY PROJECT",
   LoadingTitle = "Fly & Bypass Yükleniyor...",
   LoadingSubtitle = "by serazs",
   ConfigurationSaving = {
      Enabled = false
   }
})

-- DEĞİŞKENLER
local LP = game.Players.LocalPlayer
local Mouse = LP:GetMouse()
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")

local flying = false
local flySpeed = 50
local bv = nil
local bg = nil

-- UÇMA FONKSİYONU
local function startFly()
    local char = LP.Character or LP.CharacterAdded:Wait()
    local hrp = char:WaitForChild("HumanoidRootPart")
    
    -- Varsa eskileri temizle
    if bv then bv:Destroy() end
    if bg then bg:Destroy() end

    -- Yeni fizik objeleri
    bv = Instance.new("BodyVelocity")
    bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
    bv.Velocity = Vector3.new(0, 0, 0)
    bv.Parent = hrp

    bg = Instance.new("BodyGyro")
    bg.MaxTorque = Vector3.new(math.huge, math.huge, math.huge)
    bg.P = 9e4
    bg.Parent = hrp

    task.spawn(function()
        while flying do
            RunService.RenderStepped:Wait()
            hrp.CFrame = CFrame.new(hrp.Position, hrp.Position + Mouse.Hit.LookVector)
            
            local direction = Vector3.new(0, 0.1, 0)
            
            -- Kontroller
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then
                direction = direction + Mouse.Hit.LookVector * flySpeed
            end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then
                direction = direction - Mouse.Hit.LookVector * flySpeed
            end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then
                direction = direction * CFrame.Angles(0, math.rad(90), 0)
            end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then
                direction = direction * CFrame.Angles(0, math.rad(-90), 0)
            end
            
            -- Bypass Titreşimi (Sunucuyu kandırmak için)
            bv.Velocity = direction + Vector3.new(math.random(-1,1)/10, 0, math.random(-1,1)/10)
        end
        if bv then bv:Destroy() end
        if bg then bg:Destroy() end
    end)
end

-- ARAYÜZ SEKMELERİ
local MainTab = Window:CreateTab("Ana Menü", 4483345998)

MainTab:CreateSection("Uçuş Kontrolü")

MainTab:CreateToggle({
   Name = "Fly (Uçuşu Aç/Kapat)",
   CurrentValue = false,
   Callback = function(Value)
      flying = Value
      if flying then
         startFly()
      end
   end,
})

MainTab:CreateSlider({
   Name = "Uçuş Hızı",
   Min = 10,
   Max = 300,
   Default = 50,
   Increment = 1,
   ValueName = "Hız",
   Callback = function(Value)
      flySpeed = Value
   end,
})

MainTab:CreateSection("Kısayollar")
MainTab:CreateLabel("W-S tuşları ile ileri/geri gidebilirsin.")
MainTab:CreateLabel("Mouse nereye bakarsa karakter oraya döner.")

Rayfield:Notify({Title = "Proje Hazır!", Content = "Hızı menüden ayarlayabilirsin kanka.", Duration = 5})
